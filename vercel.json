{
  "version": 2,
  "builds": [
    {
      "src": "course_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.12" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "course_project/wsgi.py"
    }
  ],
  "buildCommand": "pip install -r requirements.txt && python3 manage.py collectstatic --noinput"
}
